{
    "include": ["**/*.ts"],
    "compilerOptions": {
      "baseUrl": ".",
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowJs": false,
      "noEmit": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "skipLibCheck": true,
      "types": ["node"],
      "strictNullChecks": true,
    },
    "ts-node": {
      "files": true,
      "transpileOnly": true
    }
}
  